extends layout

block content

  h2 Author: #{author.name}
  
  div

    h4 Books
    
    dl
    each book in author_books
      dt 
        a(href=book.url) #{book.title}
      dd #{book.summary}

    else
      p This author has no books. Why don't you create their 
        a(href='/catalog/book/create') first book
        span . 
      
      
  hr
  p
    a(href=author.url+'/delete') Delete author
  p
    a(href=author.url+'/update') Update author
